<%- include('../../shared/includes/head', {pageTitle: 'Login'}) %>
<link rel="stylesheet" href="/styles/forms.css">
<link rel="stylesheet" href="/styles/auth.css">
</head>
<body>
  <%- include('../../shared/includes/header') %>
  <main>
    <h1>Login</h1>
    <form action="/login" method="POST">
      <input type="hidden" name="_csrf" value="<%= locals.csrfToken %>">

      <p>
        <label for="email">Email</label>
        <input type="email" name="email" id="email"  value="test@test.com" required>
      </p>

      <p>
        <label for="password">Password</label>
        <input type="password" name="password" id="password" minlength="6" value="123456" required>
      </p>

      <button type="submit" class="btn">Login</button>
      <p><a href="/signup" id="switch-form">Create a new user</a></p>
    </form>
  </main>
<%- include('../../shared/includes/footer') %>
